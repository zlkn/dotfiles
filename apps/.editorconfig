# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,py}]
charset = utf-8
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.lua]
indent_style = space
indent_size = 4

[{Dockerfile,Dockerfile.*}]
indent_style = space
indent_size = 4

